<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Grid Tests" parallel="tests">

    <test name="Chrome Test" parallel="methods">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="org.example.SeleniumGridExample" />
        </classes>
    </test>

    <test name="Firefox Test" parallel="methods">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="org.example.SeleniumGridExample" />
        </classes>
    </test>

    <test name="Edge Test" parallel="methods">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="org.example.SeleniumGridExample" />
        </classes>
    </test>

</suite>